{
  "name": "Dungeon Party API",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "api",
  "workspaceFolder": "/usr/src/app",
  "forwardPorts": [
    3000,
    5555,
    9229
  ],
  "portsAttributes": {
    "3000": {
      "label": "API",
      "onAutoForward": "silent"
    },
    "5555": {
      "label": "Prisma Studio",
      "onAutoForward": "notify"
    },
    "9229": {
      "label": "Debugging",
      "onAutoForward": "silent"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "prisma.prisma",
        "dbaeumer.vscode-eslint",
        "Gruntfuggly.todo-tree",
        "SeyyedKhandon.firacode"
      ],
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "eslint.run": "onSave",
        "editor.codeActionsOnSave": {
          "source.fixAll": "explicit"
        },
        "eslint.validate": [
          "javascript",
          "typescript"
        ],
        "typescript.preferences.importModuleSpecifier": "relative",
        "typescript.updateImportsOnFileMove.enabled": "always",
        "editor.tabSize": 2,
        "workbench.iconTheme": "vs-seti-firacodenerdfontmono",
        "editor.fontLigatures": true,
        "editor.fontFamily": "'FiraCode Nerd Font Mono', 'Droid Sans Mono', 'monospace', monospace"
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers-extra/features/starship:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers-extra/features/nestjs-cli:2": {},
    "ghcr.io/devcontainers-extra/features/prisma:2": {}
  },
  "postCreateCommand": [
    "printf 'eval \"$(starship init bash)\"' >> '/root/.bashrc'",
    "yarn"
  ],
  "shutdownAction": "stopCompose"
}